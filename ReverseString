import java.util.*;
import java.io.*;
 
class ReverseString
{
   public static void main(String args[])
   {
      String original, reverse = "";
      Scanner in = new Scanner(System.in);             // Take input from the keyboard
 
      System.out.println("Enter a string to reverse");
      original = in.nextLine();                       // Asssign entered value to the particular variable
 
      int length = original.length();                 // Length 
 
      for ( int i = length - 1 ; i >= 0 ; i-- )        // Performing some operation to that reverse of the string
         reverse = reverse + original.charAt(i);
 
      System.out.println("Reverse of entered string is: "+reverse);
   }
}


/* Output:--

D:\practice>java ReverseString
Enter a string to reverse
himabindu
Reverse of entered string is: udnibamih

D:\practice>java ReverseString
Enter a string to reverse
malayalam
Reverse of entered string is: malayalam

*/

